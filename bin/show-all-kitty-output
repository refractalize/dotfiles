#!/usr/bin/env zsh

DIR=$(mktemp -d)

cat | awk "
  BEGIN {
    part = 1;
    file = sprintf(\"$DIR/%08d.tty\", part);
  }

  /\033]133;C/ {
    capture = 1;
    part++;
    file = sprintf(\"$DIR/%08d.tty\", part);
  }

  /\033]133;A/ {
    capture = 0;
  }

  capture {
    print >file;
  }
"

FILES=($DIR/*)

sed -i '' -E 's/\x1b\].*\x1b\\//g' $FILES

nvim ${(O)FILES}

rm -rf $DIR
