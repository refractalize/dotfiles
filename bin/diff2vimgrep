#!/usr/bin/env perl -n

if (/^@@ -([0-9]+),([0-9]+) [+]([0-9]+),([0-9]+) @@/) {
  $line = $3 - 1;
} elsif (/^\+\+\+ ([^\/]+\/(.*)|\/dev\/null)/) {
  $new_filename = $2;
} elsif (/^--- ([^\/]+\/(.*)|\/dev\/null)/) {
  $old_filename = $2;
} elsif ($new_filename || $old_filename) {
  chomp;
  if (/^-/) {
    $old_line = $line + 1;
    print "$old_filename:$old_line:1:\033[0;31m$_\033[0m\n";
  } elsif (/^\+/) {
    $line++;
    print "$new_filename:$line:1:\033[0;32m$_\033[0m\n";
  } elsif (/^ (.*)/) {
    $line++;
  }
}
