#!/usr/bin/env zsh

INPUT_LINE_NUMBER=$1
CMD=$2

KITTY_PIPE_DATA_SPLIT=(${(@s/:/)KITTY_PIPE_DATA})
WINDOW_SIZE=(${(@s/,/)KITTY_PIPE_DATA_SPLIT[3]})
WINDOW_HEIGHT=$WINDOW_SIZE[1]
LINE=$(( $INPUT_LINE_NUMBER + $WINDOW_HEIGHT ))

FILE=$(mktemp)

mv $FILE $FILE.tty

FILE=$FILE.tty

cat | awk "
  BEGIN {
    capture = 1;
  }

  /\033]133;C/ && !(found) {
    capture = 1;
    line = 0;
    delete lines
  }

  /\033]133;A/ {
    capture = 0
  }

  capture {
    lines[line++] = \$0
  }

  NR == $LINE {
    found = 1
  }

  END {
    for (i in lines)
      print lines[i]
  }
" > $FILE

sed -i '' -E 's/\x1b\].*\x1b\\//g' $FILE

eval $CMD $FILE

rm $FILE
